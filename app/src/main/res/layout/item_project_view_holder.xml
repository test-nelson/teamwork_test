<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#ffffff"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/image_view_item_project_view_holder_project_logo"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_view_item_project_view_holder_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="#db000000"
            android:textSize="24sp"
            tools:text="Amazing project" />


        <TextView
            android:id="@+id/text_view_item_project_view_holder_project_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="#80000000"
            android:textSize="14sp"
            tools:text="Teamwork Inc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Open"
                android:textColor="#db000000"

                />

            <android.support.v7.widget.AppCompatButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/button"
                android:text="Edit"
                android:textColor="#db000000" />

            <FrameLayout
                android:id="@+id/view_group_item_project_view_holder_expand_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/image_view_item_project_view_holder_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />


            </FrameLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/text_view_item_project_view_holder_project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="#80000000"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>


</android.support.v7.widget.CardView>