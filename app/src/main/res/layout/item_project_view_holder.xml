<?xml version="1.0" encoding="utf-8" standalone="no"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/project_view_holder_container" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_width="match_parent" app:cardBackgroundColor="#ffffff" app:cardElevation="2dp" app:cardUseCompatPadding="true">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:paddingBottom="8dp">

        <ImageView android:id="@+id/image_view_item_project_view_holder_project_logo" android:layout_height="192dp" android:layout_width="match_parent" android:scaleType="centerCrop"/>

        <TextView android:id="@+id/text_view_item_project_view_holder_project_name" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_width="wrap_content" android:paddingEnd="16dp" android:paddingStart="16dp" android:textColor="#db000000" android:textSize="24sp" tools:text="Amazing project"/>


        <TextView android:id="@+id/text_view_item_project_view_holder_project_sub_title" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_width="wrap_content" android:paddingEnd="16dp" android:paddingStart="16dp" android:textColor="#bb000000" android:textSize="14sp" tools:text="Teamwork Inc"/>

        <RelativeLayout android:layout_height="wrap_content" android:layout_marginEnd="4dp" android:layout_marginStart="4dp" android:layout_marginTop="12dp" android:layout_width="match_parent">


            <ImageButton android:background="?attr/selectableItemBackgroundBorderless" android:id="@+id/image_view_item_project_view_holder_star_button" android:layout_alignParentStart="true" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_width="wrap_content" android:src="@drawable/ic_star_border_accent_24dp"/>


            <ImageButton android:alpha="0.5" android:background="?attr/selectableItemBackgroundBorderless" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_marginStart="32dp" android:layout_toEndOf="@id/image_view_item_project_view_holder_star_button" android:layout_width="wrap_content" android:src="@drawable/ic_delete_black_24dp"/>


            <FrameLayout android:background="?attr/selectableItemBackground" android:id="@+id/view_group_item_project_view_holder_expand_button" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:layout_height="40dp" android:layout_width="40dp">

                <ImageView android:alpha="0.5" android:id="@+id/image_view_item_project_view_holder_expand_button" android:layout_gravity="center" android:layout_height="32dp" android:layout_width="32dp" android:src="@drawable/ic_keyboard_arrow_down_white_24dp"/>


            </FrameLayout>

        </RelativeLayout>


        <TextView android:ellipsize="end" android:id="@+id/text_view_item_project_view_holder_project_description" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_width="wrap_content" android:lineSpacingExtra="8sp" android:maxLines="8" android:textColor="#aa000000" android:textSize="14sp" android:visibility="gone"/>

    </LinearLayout>


</android.support.v7.widget.CardView>
